<h2>{{client.name}}</h2>
<table class="header-of-left">
    <tbody>
        <tr>
            <th>
                E-mail
            </th>
            <td>
                <a href="mailto:{{this.email}}" target="_blank">{{client.email}}</a>
            </td>
        </tr>
        <tr>
            <th>
                Name
            </th>
            <td>
                {{client.name}}
            </td>
        </tr>
        <tr>
            <th>
                Date of next visit
            </th>
            <td>
                {{client.nextContact}}
            </td>
        </tr>
        {{#if client.notes}}
        <tr>
            <th>
                Notes
            </th>
            <td>
                {{client.notes}}
            </td>
        </tr>
        {{/if}}
    </tbody>
</table>
<p>
<form method="GET" action="/client/form/edit/{{client.id}}">
    <button type="submit">Edit Client Data</button>
</form>
</p>
<p>
    {{> go-to-clients}}
</p>
