<h2>List of Clients</h2>
<table>
    <thead>
    <tr>
        <th>
            E-mail:
        </th>
        <th>
            Name:
        </th>
        <th>
            Date of next contact:
        </th>
        <th>
        </th>
    </tr>
    </thead>
    <tbody>
    {{#each clients}}
        <tr>
            <th>
                <a href="mailto:{{this.email}}" target="_blank">{{this.email}}</a>
            </th>
            <td>
                <a href="/client/{{this.id}}">{{this.name}}</a>
            </td>
            <td>
                {{this.nextContact}}
            </td>
            <td>
                <a href="/client/{{this.id}}">Details</a>
                <form method="POST" action="/client/{{this.id}}?_method=DELETE">
                    <button type="submit">Delete</button>
                </form>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>
<p>
<form method="GET" action="/client/form/add">
    <button type="submit">Add new client</button>
</form>
</p>
