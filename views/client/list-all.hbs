<h2>List of Clients</h2>
<table>
    <thead>
        <tr>
            <th>
                E-mail:
            </th>
            <th>
                Name:
            </th>
            <th>
                Date of next contact:
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
    {{#each clients}}
        <tr>
                <th>
                    <a href="mailto:{{this.email}}" target="_blank">{{this.email}}</a>
                </th>
            <td>
                <a href="/client/{{this.id}}">{{this.name}}</a>
            </td>
            <td>
                {{this.nextContact}}
            </td>
            <td>
                <a href="/client/{{this.id}}">Details</a>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>